<h1>Stories</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{{editIcon user ../user _id}}}  {{!-- user is the user the story belongs to | ../user is the logged in user --}}
        </div>
      </div>
      <div class="card-conetent center-align">
        <h5>{{title}}</h5>
        <p>{{stripTags (truncate body 150)}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}" alt="">
          <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
        </div>
      </div>
      <div class="card-action center-align">
        <a href="/stories/{{_id}}" class="btn gray">Read more</a>
      </div>
    </div>
  {{else}}
    <p>No Stories to display</p>
  {{/each}}
</div>